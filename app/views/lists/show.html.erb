<div class="cards">
  <div class="card-trip">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <%= image_tag movie.poster_url, alt: movie.title, class: 'movie-img rounded-top'%>
      <div class="card-trip-infos">
        <div>
          <strong><%= movie.title %></strong>
          <p><%= movie.overview %></p>
        </div>
        <h2 class="card-trip-pricing"> <%= movie.rating %></h2>
        <div>
          <%= link_to "delete", bookmark_path(bookmark), method: :delete, class: "card-remove-link", data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to 'Create New Bookmark', new_list_bookmark_path(@list), class: "nav-link"%>
